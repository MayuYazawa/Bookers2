<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: current_user %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="books_table">
        <thead>
          <tr>
            <th>Image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= image_tag user.get_profile_image(100,100) %></th>
            <th><%= user.name %></th>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>