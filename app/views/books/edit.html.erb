<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="field">
    <label for="book_title">Title<br>
    <%= f.text_field :title %>
    </label>
  </div>

  <div class="field">
    <label for="book_body">Body<br>
    <%= f.text_area :body %>
    </label>
  </div>

  <br><%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>