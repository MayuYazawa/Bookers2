<% @books.each do |book| %>
<div>
  <%= image_tag book.get_image %>
  <p>本のタイトル：<%= book.title %></p>
  <p>感想：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>

<h1>新規投稿フォーム</h1>
<%= form_with model: @book do |f| %>
    <h4>本のタイトル</h4>
      <%= f.text_field :title %>
    <h4>感想</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
<% end %>