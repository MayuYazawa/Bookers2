<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'books/list', book: @book, user: @user%>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <% @books.each do |book| %>
      <h2>Books</h2>
      <table class="books_table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><%= image_tag book.user.get_profile_image(100,100) %></th>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
